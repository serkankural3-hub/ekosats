<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ splash screen overrides: disable the system animated icon so
         the app's launch_background drawable is shown instead. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenBackground">@drawable/launch_background</item>
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
</resources>
